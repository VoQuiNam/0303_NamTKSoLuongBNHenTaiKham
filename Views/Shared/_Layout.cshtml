@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThongKeSoLuongBN</title>

    <link rel="stylesheet" href="~/dist/lib/bootstrap/dist/css/bootstrap.min.css" />

    


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="C0303TKSoLuongBNHenTaiKham" asp-action="V0303TKSoLuongBNHenTaiKhamPage">Thống kê số lượng bệnh nhân tái khám</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "D0303Nam_TKSoLuongBNHenTaiKham" ? "active" : "")"
                               asp-controller="C0303TKSoLuongBNHenTaiKham" asp-action="V0303TKSoLuongBNHenTaiKhamPage">Thống kê số lượng bệnh nhân hẹn tái khám</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "D0303Nam_TKSoLuongBNHenTaiKham" ? "active" : "")"
                               asp-controller="C0303BaoCaoDoiSoatBIDV" asp-action="V0303BaoCaoDoiSoatBIDVPage">Báo cáo đối soát BIDV</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "D0303Nam_TKSoLuongBNHenTaiKham" ? "active" : "")"
                               asp-controller="C0303BaoCaoBacSiDocKQ" asp-action="V0303BaoCaoBacSiDocKQPage">Báo cáo bác sĩ đọc kết quả</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="max-width:98%;margin:auto;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="@Url.Content("~/dist/js/BienChung.js")"></script>
    <script src="~/dist/lib/Jquery/jquery.min.js"></script>
    <script src="@Url.Content("~/dist/lib/Jquery/jquery.inputmask.js")"></script>
    <script src="~/dist/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        let currentPath = window.location.pathname.toLowerCase();
        let navLinks = document.querySelectorAll(".navbar-nav .nav-link");

        navLinks.forEach(link => {
            let linkPath = link.getAttribute("href").toLowerCase();
            if (currentPath.includes(linkPath)) {
                link.classList.add("active");
            } else {
                link.classList.remove("active");
            }
        });
    });
</script>
